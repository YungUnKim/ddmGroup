<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:id="@+id/my_name"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:src="@drawable/ddmlogo2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_white_box"
                android:drawableRight="@drawable/icon_search"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_notice"
            android:gravity="center_vertical"
            android:text="@string/notice_text"
            android:textColor="@color/ddm_real_green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/notice_box"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:drawableRight="@drawable/icon_read"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="여기는 공지사항1 입니다."
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ddm_line_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:drawableRight="@drawable/icon_read"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="여기는 공지사항2 입니다."
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ddm_line_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:drawableRight="@drawable/icon_read"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="여기는 공지사항3 입니다."
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_newsfeed"
            android:gravity="center_vertical"
            android:text="@string/notice_newsfeed"
            android:textColor="@color/ddm_real_green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listview_newsfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:divider="#eeeeee"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</LinearLayout>