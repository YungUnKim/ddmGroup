<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/contents_menu_btn"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_menu" />

                    <ImageView
                        android:id="@+id/contents_logo_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ddmlogo2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/contents_read_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="10명 읽음"
                        android:textColor="@color/content_gray"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_comment" />

                    <TextView
                        android:id="@+id/contents_reply_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-8dp"
                        android:gravity="center_vertical"
                        android:text="12"
                        android:textColor="@color/content_gray"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginTop="10dp"
                android:background="@color/ddm_line_gray" />

            <TextView
                android:id="@+id/contents_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Codingsroom"
                android:textColor="@color/ddm_real_green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contents_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="&apos;빅뱅이론&apos; 칼리 쿠오코가 &apos;맨 오브 스틸&apos; 헨리 카빌과 열애중이라니?"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contents_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="재영박"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_person" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/ddm_line_gray" />

                <TextView
                    android:id="@+id/contents_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="2014.05.06 17:16"
                    android:textColor="@color/content_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginTop="20dp"
                android:background="@color/ddm_line_gray" />

            <ImageView
                android:id="@+id/contents_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sample_image" />

            <TextView
                android:id="@+id/contents_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="10dip"
                android:text="‘룸메이트’에 출연하는 송가연의 몸매가 화제다. 

SBS ‘일요일이 좋다-룸메이트’에 출연 중인 송가연이 지난 4일 자신의 SNS에 “내일부터 운동 열심히 해야지! 몸 만들어야겠다”라며 “주말엔 집에서 ‘룸메이트’보고 쉬는 게 최고”라는 글과 함께 사진 한 장을 공개했다. 

사진 속 송가연은 거울 앞에서 티셔츠를 말아 올려 탄탄한 11자 명품 복근을 과시하고 있다. 긴 생머리의 청순미와 볼륨감 있는 가슴 라인이 돋보인다. 

송가연은 ‘룸메이트’ 첫 방송 이후 청순한 미모로 반전 매력을 뽐내며 시청자들의 눈길을 사로잡았다."
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/contents_menu_helper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:visibility="gone" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contents_menu_layout"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_white_box"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone"
        android:weightSum="7" >

        <TextView
            android:id="@+id/contents_return_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/icon_back"
            android:text=" 돌아가기" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/contents_edit_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/icon_edit"
            android:text=" 수정하기" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/contents_delete_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableTop="@drawable/icon_delete"
            android:text=" 삭제하기" />
    </LinearLayout>

</RelativeLayout>