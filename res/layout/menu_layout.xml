<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_menu"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#33ffffff"
            android:layout_height="44dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/profile_image"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/kakao_default_profile_image"
                android:scaleType="centerCrop" />
            
            <TextView 
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_toRightOf="@id/profile_image"/>

            <ImageView
                android:id="@+id/slidingmenu_back_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:padding="3dp"
                android:src="@drawable/icon_back_w" />
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#33ffffff"/>

        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="3" >

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_1"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류1" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_2"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류2" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_3"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류3" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_4"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_5"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_6"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류6" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_7"
                    style="@style/menu_item_layout" >

                    <TextView
                        style="@style/menu_item"
                        android:text="대분류7" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:scrollbars="none"
            android:divider="#11ffffff"
            android:dividerHeight="0.5dip"
            android:visibility="gone" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#33000000"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/button_favorite"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/icon_favorite" />

        <ImageView
            android:id="@+id/button_notice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/icon_notice2" />

        <ImageView
            android:id="@+id/button_setting"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/icon_setting" />
    </LinearLayout>

</RelativeLayout>