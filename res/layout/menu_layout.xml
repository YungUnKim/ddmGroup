<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#55000000" >

            <ImageView
                android:id="@+id/menu_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_group2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/menu_title_icon"
                android:gravity="center"
                android:text="그룹 선택"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/slidingmenu_back_button"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@drawable/icon_back_w" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="3" >

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_1"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_1"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_1" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_1"
                        android:text="마을공동체" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_2"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_2"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_2" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_2"
                        android:text="청소년" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_3"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_3"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_3" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_3"
                        android:text="대학생" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_4"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_4"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_4" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_4"
                        android:text="직장인" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_5"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_5"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_5" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_5"
                        android:text="운동" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_6"
                    style="@style/menu_item_layout" >

                    <ImageView
                        android:id="@+id/menu_icon_6"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_6" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_6"
                        android:text="IT" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/inner_horizotal_menu" >

                <RelativeLayout
                    android:id="@+id/menu_7"
                    style="@style/menu_item_layout" >
                    
                    <ImageView
                        android:id="@+id/menu_icon_7"
                        style="@style/menu_icon"
                        android:src="@drawable/menu_7" />

                     <TextView
                        style="@style/menu_item"
                        android:layout_below="@id/menu_icon_7"
                        android:text="여행" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:divider="@color/ddm_line_gray3"
            android:dividerHeight="0.5dip"
            android:scrollbars="none"
            android:visibility="gone" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#55000000"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/button_favorite"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/favorite_icon" />

        <ImageView
            android:id="@+id/button_notice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/icon_notice2" />

        <ImageView
            android:id="@+id/button_setting"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/icon_setting" />
    </LinearLayout>

</RelativeLayout>